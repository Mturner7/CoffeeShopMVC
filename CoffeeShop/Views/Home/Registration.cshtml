@model CoffeeShop.Models.CustomerModel
@{
    ViewData["Title"] = "Register";
}

<h2>Fill out the form below to make an account</h2>

<form method="post" action="/home/formresponse">

    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="FirstName">First name</label>
        <input asp-for="FirstName" class="form-control" required/>
        <span class="text-danger" asp-validation-for="FirstName"></span>
    </div>
    <div class="form-group">
        <label asp-for="LastName">Last name</label>
        <input asp-for="LastName" class="form-control" required/>
        <span class="text-danger" asp-validation-for="LastName"></span>
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber">Phone number</label>
        <input class="form-control" asp-for="PhoneNumber" required/>
        <span class="text-danger" asp-validation-for="PhoneNumber"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input class="form-control" asp-for="Email" required/>
        <span class="text-danger" asp-validation-for="Email"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <input class="form-control" type="password" asp-for="Password" required/>
        <span class="text-danger" asp-validation-for="Password"></span>
    </div>

    <button type="submit" class="btn btn-primary">Sign Up</button>
</form>