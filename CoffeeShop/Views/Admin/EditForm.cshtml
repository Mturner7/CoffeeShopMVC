@model Product
@{
    ViewData["Title"] = "Edit a product";
}

<h2>Editing @Model.productName Id: @Model.productId</h2>

<form method="post" action="/admin/edit">

    <input type="hidden" asp-for="productId" />

    <div class="form-group">
        <label for="productName">Name</label>
        <input type="text" asp-for="productName" class="form-control" value="@Model.productName" />
    </div>

    <div class="form-group">
        <label for="productPrice">Price</label>
        <input type="number" min="0.00" step="0.01" asp-for="productPrice" class="form-control" value="@Model.productPrice" />
    </div>

    <div class="form-group"> 
        <label for="productCategory">Category</label>
        <input asp-for="productCategory" class="form-control" value="@Model.productCategory" />
    </div>

    <div class="form-group">
        <label for="productDescription">Description</label>
        <textarea asp-for="productDescription" class="form-control">@Model.productDescription</textarea>
    </div>

    <input type="submit" class="btn btn-primary" value="Save changes" />
</form>
