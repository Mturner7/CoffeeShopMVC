@{
    ViewData["Title"] = "Edit a product";
}

<h2>Creating a new product</h2>

<form method="post" action="/admin/create">

    <input type="hidden" name="productId" />

    <div class="form-group">
        <label for="productName">Name</label>
        <input type="text" name="productName" class="form-control" />
    </div>

    <div class="form-group">
        <label for="productPrice">Price</label>
        <input type="number" min="0.00" step="0.01" name="productPrice" class="form-control" />
    </div>

    <div class="form-group"> 
        <label for="productCategory">Category</label>
        <input name="productCategory" class="form-control" />
    </div>

    <div class="form-group">
        <label for="productDescription">Description</label>
        <textarea name="productDescription" class="form-control"></textarea>
    </div>

    <input type="submit" class="btn btn-primary" value="Save changes" />
</form>
