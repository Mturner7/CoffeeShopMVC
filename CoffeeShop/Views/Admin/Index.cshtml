@model List<Product>
@{
    ViewData["Title"] = "Product List (Admin)";
}

<h2>Products</h2>

<table cellpadding="20">
    @foreach (Product prod in Model)
    {
        <tr>
            <td>
                <a href="../Product/ProductInfo/@prod.productId">@prod.productName</a>
            </td>
            <td>
                <a href="../Admin/EditForm/@prod.productId" class="btn btn-dark">Edit</a>
            </td>
            <td>
                <a href="/admin/deleteform/@prod.productId" class="btn btn-danger" id="@prod.productId">Delete</a>
            </td>
        </tr>
    }
</table><br /><br/>

<a type="button" class="btn btn-primary" href="/admin/createform" >Add a new product</a>




